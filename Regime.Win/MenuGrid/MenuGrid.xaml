<UserControl x:Class="Regime.Win.MenuGrid.MenuGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dayControl="clr-namespace:Regime.Win.DayControl"
             xmlns:menuGrid="clr-namespace:Regime.Win.MenuGrid"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid d:DataContext="{d:DesignInstance {x:Type menuGrid:MenuGridVM}}">
        <ListBox ItemsSource="{Binding Days}" HorizontalContentAlignment="Stretch"  Background="WhiteSmoke" x:Name="TheList" 
                 ScrollViewer.CanContentScroll="False">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <dayControl:DayControl Margin="7"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
