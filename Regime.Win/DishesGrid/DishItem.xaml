<UserControl x:Class="Regime.Win.DishesGrid.DishItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:domain="clr-namespace:Regime.Domain;assembly=Regime.Domain"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="Black"
            d:DataContext="{d:DesignInstance {x:Type domain:Dish}}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" TextWrapping="Wrap" Text="{Binding Caption}"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Width="25" Height="25" Margin="5">...</Button>
                <Button Width="25" Height="25" Margin="5">X</Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
